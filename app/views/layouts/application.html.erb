<!DOCTYPE html>
<html>
  <head>
    <title>Kasosa</title>
    <%= csrf_meta_tags %>

    <link href="https://fonts.googleapis.com/css?family=Dosis|Open+Sans+Condensed:300" rel="stylesheet">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <script src="https://use.fontawesome.com/8e76d2e5c2.js"></script>
  </head>

  <body>
    <%= render partial: 'shared/navbar' %>

    <% if notice %>
      <p class="notice alert alert-info text-center margin-20"><%= notice %></p>
    <% elsif alert %>
      <p class="alert alert-warning text-center margin-20"><%= alert %></p>
    <% end %>

    <div class="main-container center-with-margin">
      <%= yield %>
    </div>
  </body>
</html>

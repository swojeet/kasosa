<div class="brand_logo_container" style="height: 120px; width: 90px;">
  <span class="brand_logo"></span>
</div>

<div class="container-fluid no-padding">
  <div class="row">
     <div class="col-md-12">
      <div class="brand_image_container">
        <img src="http://i.imgur.com/Md7NrM4.jpg" alt="KaSoSa!" class="img-responsive" id="brand_image"/>
      </div>
     </div>
  </div>
</div>

<div class="posts_container full-width" id="startchange">
  <div class = "width-85 center-with-margin">
    <% @posts.in_groups_of(2) do |post1, post2| %>
      <% if post1 %>
      <div class = "row">
          <div class = "col-xs-12 col-md-7 padding-50 text-center">
            <%= image_tag (post1.photo), class: 'posts_image' %>
          </div>
          <div class = "col-xs-12 col-md-5 padding-50">
            <%= post1.caption %>
          </div>
        <% end %>
      </div>
      <hr/>

      <div class = "row">
        <% if post2 %>
          <div class = "col-xs-12 col-md-5 padding-50 text-right">
            <%= post2.caption %>
          </div>
          <div class = "col-xs-12 col-md-7 padding-50 text-center">
            <%= image_tag (post2.photo), class: 'posts_image' %>
          </div>
        <% end %>
      </div>
      <hr/>
    <% end %>
  </div>
</div>
